#!/bin/sh

#Schema compiler
#Builds XBean types from xsd files.

cp=
if [ -f $XMLBEANS_HOME/build/ar/xbean.jar ];
then
cp=$cp:$XMLBEANS_HOME/build/ar/xbean.jar:$XMLBEANS_HOME/build/lib/jsr173_api.jar:$XMLBEANS_HOME/build/lib/resolver.jar;
else
cp=$cp:$XMLBEANS_HOME/lib/xbean.jar:$XMLBEANS_HOME/lib/jsr173_api.jar:$XMLBEANS_HOME/lib/resolver.jar;
fi

case "`uname`" in
    CYGWIN*)
        cp=`cygpath -w -p $cp`
        ;;
esac

java -Xmx256m -classpath $cp org.apache.xmlbeans.impl.tool.SchemaCompiler $*
