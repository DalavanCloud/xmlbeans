#!/bin/sh

#Instance to Schema tool
#Builds xsd files from xml instance files.

cp=
if [ -f $XMLBEANS_HOME/build/ar/xbean.jar ];
then
cp=$cp:$XMLBEANS_HOME/build/ar/xbean.jar:$XMLBEANS_HOME/build/lib/jsr173_api.jar
else
cp=$cp:$XMLBEANS_HOME/lib/xbean.jar:$XMLBEANS_HOME/lib/jsr173_api.jar
fi

case "`uname`" in
    CYGWIN*)
        cp=`cygpath -w -p $cp`
        ;;
esac

java -classpath $cp org.apache.xmlbeans.impl.inst2xsd.Inst2Xsd $*
