#!/bin/sh

# Invokes XSTC

if [ -z $XMLBEANS_LIB ]; then . `dirname $0`/_setlib; fi

cp=$XMLBEANS_LIB/xbean.jar:$XMLBEANS_LIB/jsr173_api.jar:$XMLBEANS_LIB/resolver.jar

case "`uname`" in
    CYGWIN*)
        cp=`cygpath -w -p $cp`
        ;;
esac

java -classpath $cp org.apache.xmlbeans.impl.tool.XSTCTester $*
